<Window x:Class="BookshopWpf.Login.LoginWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookshopWpf.Login"
             mc:Ignorable="d"
        Title="Login" Height="300" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="160"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Margin="10" HorizontalAlignment="Center">
            <Label Content="Login:" HorizontalAlignment="Left"/>
            <TextBox Width="200" Margin="0,0,0,10" Height="20" HorizontalAlignment="Left"/>
            <Label Content="Password:" HorizontalAlignment="Left"/>
            <TextBox Width="200" Margin="0,0,0,10" Height="20" HorizontalAlignment="Left"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Margin="10" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="OkButton" Content="OK" Height="30" Margin="5" Padding="5"
                        Click="OkButton_Click"/>
            <Button x:Name="CancelButton" Content="Cancel" Height="30" Margin="5" Padding="5"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>